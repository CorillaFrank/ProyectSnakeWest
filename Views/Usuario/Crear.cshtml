@model Proyect_Snake_West.Models.UsuarioConRolViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<h2>Crear Usuario con Rol</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Contrase√±a</label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>

    <div class="form-group">
        <label>Rol</label>
        <select asp-for="RolSeleccionado" asp-items="@(new SelectList(Model.RolesDisponibles))" class="form-control">
            <option disabled selected>-- Selecciona un rol --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Crear Usuario</button>
</form>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success mt-2">@TempData["mensaje"]</div>
}
