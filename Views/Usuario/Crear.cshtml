@model Proyect_Snake_West.Models.UsuarioConRolViewModel

@{
    ViewData["Title"] = "Crear Usuario con Rol";
}

<h2>Crear Usuario con Rol</h2>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success">@TempData["mensaje"]</div>
}

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RolSeleccionado">Rol</label>
        <select asp-for="RolSeleccionado" class="form-control" asp-items="new SelectList(Model.RolesDisponibles)">
            <option disabled selected>-- Selecciona un rol --</option>
        </select>
        <span asp-validation-for="RolSeleccionado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear Usuario</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
